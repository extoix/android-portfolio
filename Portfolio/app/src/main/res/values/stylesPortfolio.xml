<resources>

    <style name="PortfolioLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/portfolio_layout_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/portfolio_layout_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/portfolio_layout_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/portfolio_layout_horizontal_margin</item>
    </style>

    <style name="PortfolioItem">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/portfolio_vertical_spacer_margin</item>
        <item name="android:layout_marginBottom">@dimen/portfolio_vertical_spacer_margin</item>
    </style>

    <style name="PortfolioTitle" parent="PortfolioItem">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
    </style>

    <style name="PortfolioButton" parent="PortfolioItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/portfolio_blue_100</item>
    </style>

    <style name="PortfolioButton.Capstone">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/portfolio_blue_500</item>
    </style>

</resources>
